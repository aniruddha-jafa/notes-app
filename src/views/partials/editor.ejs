<form id='note-form'>
  <div class='row py-2'>
    <div class="col-md-9">
      <div class="form-floating">
          <input
            type="text"
            name="title"
            id='title'
            class="form-control form-control-sm"
            minlength='2'
            maxlength='50'
            placeholder="Note name goes here">
            <label for='title'>Title</label>
      </div>
    </div>
    <div class="col-md-3 py-2">
      <div class="btn-group">
        <button id='save-button' type='submit' class='btn btn-sm btn-outline-success'>Save</button>
        <button id='new-note-button' type='button' class='btn btn-sm btn-outline-primary'>New</button>
      </div>
    </div>
  </div>
  <div id='editor-container'>
    <div id="quill-editor"></div>
  </div>
  <br>
</form>
